<Window x:Class="ServerEye.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ServerEye"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MaxHeight="450" MaxWidth="800"
        ResizeMode="CanMinimize" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="85*"/>
            <RowDefinition Height="284*"/>
            <RowDefinition Height="65*"/>
        </Grid.RowDefinitions>
        <Rectangle x:Name="ConnectionStatusLight" HorizontalAlignment="Center" Height="68" Margin="0,10,0,0" Stroke="Black" VerticalAlignment="Top" Width="268"/>
        <ProgressBar Margin="98,10,135,22" Grid.Row="2"/>
        <TextBlock x:Name="ConnectionStatusText" HorizontalAlignment="Left" TextWrapping="Wrap" Text="No Go" VerticalAlignment="Center" Height="30" Width="74" Margin="382,0,0,0"/>

    </Grid>
</Window>
